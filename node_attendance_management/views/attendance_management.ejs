</script>
</head>
<body onload="initialize()">

	<h1>勤怠管理</h1>
	<h2>ユーザ情報</h2>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>氏名</th>
					<th>メールアカウント</th>
					<th>部署</th>
					<th>職級</th>
				</tr>

			</thead>
			<tbody>
				<tr>
					<td><%=employee_privacy.name%></td>
					<td><%=employee_privacy.mail%></td>
					<td></td>
					<td></td>
				</tr>
			</tbody>
		</table>
		<table class="table">
			<thead>
				<tr>
					<th>住所</th>
					<th>電話番号</th>
					<th>誕生日</th>
					<th>雇用日</th>
				</tr>

			</thead>
			<tbody>
				<tr>
					<td><%=employee_privacy.address%></td>
					<td><%=employee_privacy.phone_number%></td>
					<td><%=new Date(employee_privacy.birthday)%></td>
					<td><%=employee_privacy.hiredate%></td>
				</tr>
			</tbody>
		</table>
	</div>
	<!-- <div class="container-fluid bg-info">container-fluid</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-2 bg-info">col-xs-2</div>
			<div class="col-xs-6 bg-success">col-xs-6</div>
			<div class="col-xs-2 bg-warning">col-xs-2</div>
			<div class="col-xs-2 bg-danger">col-xs-2</div>
		</div>
	</div> -->


	<h2>勤怠状況</h2>
	<div class="container">
		<p class="text-right">
		<input type="button" class="btn" value="サンプルボタン1" />
		<input type="button" class="btn" value="サンプルボタン2" />
		<input type="button" class="btn" value="サンプルボタン3" />
		</p>
		<h2 class="text-center">
			<%=year%>年
			<%=month%>月
		</h2>
		<table class="table">
			<thead>
				<tr>
					<th class="text-center">日</th>
					<th class="text-center">曜日</th>
					<th class="text-center">休日</th>
					<th class="text-center">開始時刻</th>
					<th class="text-center">終了時刻</th>
					<th class="text-center">時刻自動入力</th>					
					<th class="text-center">稼動時間</th>
					<th class="text-center">休憩時間</th>
					<th class="text-center">出社状況</th>
					<th class="text-center">コメント</th>

				</tr>
			</thead>

			<tbody>
				<%
				var dayLabels = new Array('日', '月', '火', '水', '木', '金', '土');
				for(var i = 0; i < lastDate; i++){
					date = new Date(year, month-1, i+1);
				%>
				<tr>					
					<td class="text-center"><%=date.getDate()%>日</td>
					<td class="text-center">
						<%if(date.getDay() == 0){%>
						<p class="text-warning">
							<%=dayLabels[date.getDay()]%>
						</p>
						<%}else if(date.getDay() == 6){%>
						<p class="text-primary">
							<%=dayLabels[date.getDay()]%>
						</p>
						<%}else{%>
						<p class="text-secondary">
							<%=dayLabels[date.getDay()]%>
						</p>
						<%}%>
					</td>
					<td class="text-center">
						<%if(date.getDay() == 0 || date.getDay() == 6){%>
						○
						<%}%>
					</td>
					<td id="start_time" class="text-center"><input type="number" id="start_time_hour" min="00" max="23"
						style="width: 40px;" />:<input type="number" id="start_time_minute" min="00" max="59"
						style="width: 40px;" /></td>
					<td id="end_time" class="text-center"><input type="number" id="end_time_hour" min="00" max="23"
						style="width: 40px;" />:<input type="number" id="end_time_minute" min="00" max="59"
						style="width: 40px;" /></td>
					<td id="working_time" class="text-center"><input type="button" class="btn" value="入力" /></td>
					<td id="working_time" class="text-center"></td>
					<td id="break_time" class="text-center"></td>
					<td id="working_state" class="text-center"><select name=”state”>
							<option value=”seizyou”>正常出勤</option>
							<option value=”izyou”>休み</option>
							<option value="chikoku">遅刻</option>
							<option value="soutai">早退</option>
							
					</select></td>
					<td class="text-center">
						<input type="text"/>
					</td>
				</tr>
				<%}%>
			</tbody>
		</table>
	</div>
</body>

</html>
